# Production Environment Variables
# Copy this file to .env.prod and update with actual production values
# NEVER commit this file to version control

# Django Settings
DEBUG=False
SECRET_KEY=your-very-secure-secret-key-with-random-characters-here
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database Configuration - Use external managed database in production
DB_ENGINE=django.db.backends.postgresql
DB_NAME=certifytrack_prod
DB_USER=certifytrack_prod_user
DB_PASSWORD=your-very-strong-production-password
DB_HOST=postgres
DB_PORT=5432

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email Configuration - Use proper email service
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-production-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Redis Configuration - Use managed Redis or external service
REDIS_URL=redis://redis:6379/0

# Frontend Configuration
VITE_API_BASE_URL=https://yourdomain.com/api

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# AWS S3 Configuration (Optional - for media storage)
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1

# Node Environment
NODE_ENV=production
